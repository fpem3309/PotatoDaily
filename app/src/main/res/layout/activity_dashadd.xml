<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/md_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/write_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:id="@+id/md_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/md_group"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/md_veryGood"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/very_good_radio"
                android:button="@null" />

            <RadioButton
                android:id="@+id/md_good"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/good_radio"
                android:button="@null" />

            <RadioButton
                android:id="@+id/md_soso"
                android:layout_width="50dp"
                android:layout_height="55dp"
                android:background="@drawable/soso_radio"
                android:button="@null" />

            <RadioButton
                android:id="@+id/md_bad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bad_radio"
                android:button="@null" />

            <RadioButton
                android:id="@+id/md_veryBad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/very_bad_radio"
                android:button="@null" />

        </RadioGroup>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_vg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매우좋음"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_g"
                app:layout_constraintTop_toTopOf="@+id/tv_g" />

            <TextView
                android:id="@+id/tv_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="35dp"
                android:text="좋음"
                app:layout_constraintEnd_toStartOf="@+id/tv_s"
                app:layout_constraintTop_toTopOf="@+id/tv_s" />

            <TextView
                android:id="@+id/tv_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="보통"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="80dp"/>

            <TextView
                android:id="@+id/tv_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나쁨"
                android:layout_marginLeft="35dp"
                app:layout_constraintStart_toEndOf="@+id/tv_s"
                app:layout_constraintTop_toTopOf="@+id/tv_s" />

            <TextView
                android:id="@+id/tv_vb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매우나쁨"
                android:layout_marginLeft="30dp"
                app:layout_constraintStart_toEndOf="@+id/tv_b"
                app:layout_constraintTop_toTopOf="@+id/tv_b" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/eat_card"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/md_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/breakfast"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/breakfast_chkbox"
                android:button="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <CheckBox
                android:id="@+id/lunch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/lunch_chkbox"
                android:button="@null"
                app:layout_constraintStart_toEndOf="@+id/breakfast"
                app:layout_constraintTop_toTopOf="@+id/breakfast" />

            <CheckBox
                android:id="@+id/dinner"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/dinner_chkbox"
                android:button="@null"
                app:layout_constraintStart_toEndOf="@+id/lunch"
                app:layout_constraintTop_toTopOf="@+id/lunch" />

            <CheckBox
                android:id="@+id/midnightSnack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mid_chkbox"
                android:button="@null"
                app:layout_constraintStart_toEndOf="@+id/dinner"
                app:layout_constraintTop_toTopOf="@+id/dinner" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_break"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="80dp"
                android:text="아침"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="점심"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toEndOf="@+id/tv_break"
                app:layout_constraintTop_toTopOf="@+id/tv_break" />

            <TextView
                android:id="@+id/tv_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저녁"
                android:layout_marginLeft="25dp"
                app:layout_constraintStart_toEndOf="@+id/tv_lunch"
                app:layout_constraintTop_toTopOf="@+id/tv_lunch" />

            <TextView
                android:id="@+id/tv_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="야식"
                android:layout_marginLeft="25dp"
                app:layout_constraintStart_toEndOf="@+id/tv_dinner"
                app:layout_constraintTop_toTopOf="@+id/tv_dinner" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/weather_card"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eat_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/sunny"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/sunny_chkbox"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <CheckBox
                android:id="@+id/cloudy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/cloudy_chkbox"
                app:layout_constraintStart_toEndOf="@+id/sunny"
                app:layout_constraintTop_toTopOf="@+id/sunny" />

            <CheckBox
                android:id="@+id/rainy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/rainy_chkbox"
                android:gravity="center"
                android:button="@null"
                app:layout_constraintStart_toEndOf="@+id/cloudy"
                app:layout_constraintTop_toTopOf="@+id/cloudy" />

            <CheckBox
                android:id="@+id/snowy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/snowy_chkbox"
                app:layout_constraintStart_toEndOf="@+id/rainy"
                app:layout_constraintTop_toTopOf="@+id/rainy" />

            <CheckBox
                android:id="@+id/windy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/windy_chkbox"
                app:layout_constraintStart_toEndOf="@+id/snowy"
                app:layout_constraintTop_toTopOf="@+id/snowy" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_sunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="흐림"
                android:layout_marginRight="25dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_cloudy"
                app:layout_constraintTop_toTopOf="@+id/tv_cloudy" />

            <TextView
                android:id="@+id/tv_cloudy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="흐림"
                android:layout_marginRight="30dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_rainy"
                app:layout_constraintTop_toTopOf="@+id/tv_rainy" />

            <TextView
                android:id="@+id/tv_rainy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="비"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_snowy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="눈"
                android:layout_marginLeft="37dp"
                app:layout_constraintStart_toEndOf="@+id/tv_rainy"
                app:layout_constraintTop_toTopOf="@+id/tv_rainy" />

            <TextView
                android:id="@+id/tv_windy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="바람"
                android:layout_marginLeft="33dp"
                app:layout_constraintStart_toEndOf="@+id/tv_snowy"
                app:layout_constraintTop_toTopOf="@+id/tv_snowy" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/people_card"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/friend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/friend_chkbox"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <CheckBox
                android:id="@+id/family"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/family_chkbox"
                app:layout_constraintStart_toEndOf="@+id/friend"
                app:layout_constraintTop_toTopOf="@+id/friend" />

            <CheckBox
                android:id="@+id/coupleFriend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/couplefriend_chkbox"
                app:layout_constraintStart_toEndOf="@+id/family"
                app:layout_constraintTop_toTopOf="@+id/family" />

            <CheckBox
                android:id="@+id/businessFriend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/businessfriend_chkbox"
                app:layout_constraintStart_toEndOf="@+id/coupleFriend"
                app:layout_constraintTop_toTopOf="@+id/coupleFriend" />

            <CheckBox
                android:id="@+id/not"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/not_chkbox"
                app:layout_constraintStart_toEndOf="@+id/businessFriend"
                app:layout_constraintTop_toTopOf="@+id/businessFriend" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="친구"
                android:layout_marginRight="25dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_family"
                app:layout_constraintTop_toTopOf="@+id/tv_family" />

            <TextView
                android:id="@+id/tv_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족"
                android:layout_marginRight="25dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_coupleFriend"
                app:layout_constraintTop_toTopOf="@+id/tv_coupleFriend" />

            <TextView
                android:id="@+id/tv_coupleFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="연인"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_businessFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지인"
                android:layout_marginLeft="25dp"
                app:layout_constraintStart_toEndOf="@+id/tv_coupleFriend"
                app:layout_constraintTop_toTopOf="@+id/tv_coupleFriend" />

            <TextView
                android:id="@+id/tv_not"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안 만남"
                android:layout_marginLeft="18dp"
                app:layout_constraintStart_toEndOf="@+id/tv_businessFriend"
                app:layout_constraintTop_toTopOf="@+id/tv_businessFriend" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/school_card"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/people_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/classtime"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/classtime_chkbox"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <CheckBox
                android:id="@+id/study"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/study_chkbox"
                app:layout_constraintStart_toEndOf="@+id/classtime"
                app:layout_constraintTop_toTopOf="@+id/classtime" />

            <CheckBox
                android:id="@+id/assignment"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/assignment_chkbox"
                app:layout_constraintStart_toEndOf="@+id/study"
                app:layout_constraintTop_toTopOf="@+id/study" />

            <CheckBox
                android:id="@+id/test"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/test_chkbox"
                app:layout_constraintStart_toEndOf="@+id/assignment"
                app:layout_constraintTop_toTopOf="@+id/assignment" />

            <CheckBox
                android:id="@+id/team"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/team_chkbox"
                app:layout_constraintStart_toEndOf="@+id/test"
                app:layout_constraintTop_toTopOf="@+id/test" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_classtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수업"
                android:layout_marginRight="25dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_study"
                app:layout_constraintTop_toTopOf="@+id/tv_study" />

            <TextView
                android:id="@+id/tv_study"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공부"
                android:layout_marginRight="25dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_assignment"
                app:layout_constraintTop_toTopOf="@+id/tv_assignment" />

            <TextView
                android:id="@+id/tv_assignment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="과제"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시험"
                android:layout_marginLeft="22dp"
                app:layout_constraintStart_toEndOf="@+id/tv_assignment"
                app:layout_constraintTop_toTopOf="@+id/tv_assignment" />

            <TextView
                android:id="@+id/tv_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팀플"
                android:layout_marginLeft="27dp"
                app:layout_constraintStart_toEndOf="@+id/tv_test"
                app:layout_constraintTop_toTopOf="@+id/tv_test" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/couple_card"
        app:cardCornerRadius="10dp"
        android:elevation="10dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/school_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <CheckBox
                android:id="@+id/dateCouple"
                android:layout_width="50dp"
