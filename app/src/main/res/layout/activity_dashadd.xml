            <CheckBox
                android:id="@+id/anniversary"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/anniversary_chkbox"
                app:layout_constraintStart_toEndOf="@+id/dateCouple"
                app:layout_constraintTop_toTopOf="@+id/dateCouple" />

            <CheckBox
                android:id="@+id/gift"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/gift_chkbox"
                app:layout_constraintStart_toEndOf="@+id/anniversary"
                app:layout_constraintTop_toTopOf="@+id/anniversary" />

            <CheckBox
                android:id="@+id/conflict"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/conflict_chkbox"
                app:layout_constraintStart_toEndOf="@+id/gift"
                app:layout_constraintTop_toTopOf="@+id/gift" />

            <CheckBox
                android:id="@+id/love"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:button="@null"
                android:background="@drawable/love_chkbox"
                app:layout_constraintStart_toEndOf="@+id/conflict"
                app:layout_constraintTop_toTopOf="@+id/conflict" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dateCouple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데이트"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_anniversary"
                app:layout_constraintTop_toTopOf="@+id/tv_anniversary" />

            <TextView
                android:id="@+id/tv_anniversary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기념일"
                android:layout_marginRight="20dp"
